<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #cdf2d6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistroUsuario">

    <children>
        <Label layoutX="100.0" layoutY="50.0" text="Nombre" />
        <TextField fx:id="nombreField" layoutX="200.0" layoutY="45.0" />

        <Label layoutX="100.0" layoutY="100.0" text="Correo Electrónico" />
        <TextField fx:id="correoField" layoutX="200.0" layoutY="95.0" />

        <Label layoutX="100.0" layoutY="150.0" text="Contraseña" />
        <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="145.0" />

        <Label layoutX="82.0" layoutY="199.0" text="Confirmar Contraseña" />
        <PasswordField fx:id="confirmPasswordField" layoutX="200.0" layoutY="195.0" />

        <Label layoutX="100.0" layoutY="250.0" text="Rol" />
        <ComboBox fx:id="rolComboBox" layoutX="200.0" layoutY="245.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Instructor" />
                    <String fx:value="Usuario" />
                </FXCollections>
            </items>
        </ComboBox>

        <Button fx:id="registerButton" layoutX="250.0" layoutY="300.0" onAction="#handleRegister" text="Registrar" />
    </children>
</AnchorPane>
