                      <Button onAction="#editOnAction" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-size: 14px;" text="Modificar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                      <Button onAction="#showOnAction" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 14px;" text="Mostrar" GridPane.rowIndex="2" />
                  </children>
              </GridPane>
          </children>
      </Pane>
   </center>
