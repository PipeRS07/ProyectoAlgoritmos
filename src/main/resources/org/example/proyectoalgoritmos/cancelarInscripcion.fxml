<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CancelInscripcionController">
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <Text text="Cancelación de Inscripciones" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                <font>
                    <Font size="20" />
                </font>
            </Text>
            <Label text="Ingresa el nombre del curso para cancelar la suscripción:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="cursoTextField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button text="Cancelar Inscripción" onAction="#handleCancelEnrollment" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                <style>
                    -fx-background-color: #FFC107;
                    -fx-text-fill: white;
                    -fx-font-size: 14px;
                </style>
            </Button>
        </GridPane>
    </center>
</BorderPane>
