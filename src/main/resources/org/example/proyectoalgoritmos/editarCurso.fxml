<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bp" prefHeight="370.0" prefWidth="466.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.editCourseController">
   <center>
      <VBox alignment="CENTER" prefHeight="355.0" prefWidth="408.0" spacing="10">
         <HBox spacing="10">
            <children>
               <TextField fx:id="nameField1" visible="false" />
                <Label style="-fx-font-size: 18px;" text="Modificar curso">
                  <font>
                     <Font name="Impact" size="11.773585319519043" />
                  </font></Label>
            </children>
         </HBox>
         <HBox spacing="10">
            <children>
               <Label text="Sigla" />
               <TextField fx:id="id" prefHeight="25.0" prefWidth="213.0" promptText="Sigla Curso" />
               <Button onAction="#handleCreateCourse" text="Buscar " />
            </children>
         </HBox>
      
                <HBox spacing="10">
              <Label text="Nombre:" />
              <TextField fx:id="nameField" prefHeight="25.0" prefWidth="192.0" promptText="Nombre" />
          </HBox>
      
                <HBox spacing="10">
              <Label text="Descripción:" />
              <TextField fx:id="descriptionField" prefHeight="25.0" prefWidth="169.0" promptText="Descripción" />
          </HBox>
      
                <HBox spacing="10">
              <Label text="Duración:" />
              <TextField fx:id="courseLengthField" prefHeight="25.0" prefWidth="180.0" promptText="Duración" />
          </HBox>
         <HBox spacing="10">
            <children>
               <Label text="ID Instructor" />
               <TextField fx:id="courseLengthField1" prefHeight="25.0" prefWidth="164.0" promptText="Instructor" />
            </children>
         </HBox>
      
                <HBox spacing="10">
              <Label text="Nivel de Dificultad:" />
            <ComboBox fx:id="comboBox" prefHeight="25.0" prefWidth="114.0" />
          </HBox>
      
                <HBox prefHeight="22.0" prefWidth="135.0" spacing="10">
              <Button onAction="#limpiarOnAction" prefHeight="25.0" prefWidth="153.0" text="Limpiar" />
              <Button onAction="#actualizaOnAction" prefHeight="25.0" prefWidth="195.0" text="Guardar" />
          </HBox>
         <Button mnemonicParsing="false" onAction="#atrasDeEditarCursoOnAction" prefHeight="25.0" prefWidth="93.0" text="Atrás" />
      </VBox>
   </center>
</BorderPane>
