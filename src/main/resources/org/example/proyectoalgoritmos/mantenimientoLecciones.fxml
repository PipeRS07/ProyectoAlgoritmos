<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LeccionesMantenimientoController">
    <center>
        <AnchorPane prefHeight="569.0" prefWidth="537.0">

            <!-- Remove y Search -->
            <HBox spacing="10" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" />
            <Label layoutX="49.0" layoutY="257.0" text="Información de las lecciones que se manejan dentro del sistema" />
            <VBox prefHeight="29.0" prefWidth="537.0">
                <children>
                    <HBox alignment="CENTER" />
                </children>
            </VBox>
            <Pane layoutX="38.0" layoutY="22.0" prefHeight="200.0" prefWidth="461.0">
                <children>

                    <!-- Crear nueva lección -->
                    <VBox layoutX="47.0" layoutY="14.0" spacing="10">
                        <Label text="Crear Nueva Lección" />
                        <TextField fx:id="nombreCreaNuevaLeccionField" promptText="Nombre" />
                    </VBox>

                    <!-- Gestión de lección -->
                    <VBox layoutX="264.0" layoutY="15.0" spacing="10">
                        <Label text="Gestión de Lección" />
                        <TextField fx:id="nombreModificarLeccionField" promptText="Nuevo Nombre" />
                        <PasswordField fx:id="contenidoModificarLeccionField" promptText="Nuevo Contenido" />
                        <TextField fx:id="idModificarLeccionField" promptText="ID Curso" />
                        <Button onAction="#actualizarLeccionOnAction" text="Actualizar">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Button>
                    </VBox>
                     <Button layoutX="47.0" layoutY="186.0" onAction="#agregarLeccionAlCursoOnAction" text="Agregar Lección al curso">
                         <font>
                             <Font size="11.0" />
                         </font>
                     </Button>
                     <TextField fx:id="IdCursoCrearLeccionField" layoutX="47.0" layoutY="147.0" promptText="ID Curso" />
                     <TextField fx:id="contenidoCreaNuevaLeccionField" layoutX="47.0" layoutY="111.0" promptText="Contenido" />
               <TextField fx:id="idCrearNuevaLeccionField" layoutX="47.0" layoutY="75.0" promptText="ID Leccion" />
                </children>
            </Pane>
            <TableView fx:id="tableViewLecciones" layoutX="49.0" layoutY="275.0" prefHeight="200.0" prefWidth="437.0" />
             <TextField fx:id="idBuscaLeccionField" layoutX="315.0" layoutY="523.0" promptText="ID a buscar" />
             <Button layoutX="32.0" layoutY="523.0" onAction="#eliminarLeccionOnAction" text="Eliminar Lección" />
             <Button layoutX="243.0" layoutY="523.0" onAction="#buscarLeccionOnAction" text="Buscar" />

        </AnchorPane>
    </center>
</BorderPane>
