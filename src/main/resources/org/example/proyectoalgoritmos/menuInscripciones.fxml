<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuInscripcionesController">
    <center>
        <HBox alignment="CENTER" spacing="20.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <Button onAction="#handleStudentEnrollment" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Inscripción de Estudiantes" />
                <Button onAction="#handleAdminEnrollmentManagement" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;" text="Gestión de Inscripciones" />
                <Button onAction="#handleEnrollmentCancellation" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-size: 14px;" text="Cancelación de Inscripciones" />
            </children>
        </HBox>
    </center>
</BorderPane>
